from sensor_msgs.msg import JointState
from geometry_msgs.msg import PoseStamped
from std_msgs.msg import UInt8
import math
import time
import json


class UR5eWaypointController(Node):
    def __init__(self):
        super().__init__('ur5e_waypoint_controller')
