            10
        )
        
        self.current_joints = None
        self.current_pose = None
        self.current_gripper_position = None
        self.joint_names = [
            'shoulder_pan_joint',
            'shoulder_lift_joint', 
            'elbow_joint',
            'wrist_1_joint',
